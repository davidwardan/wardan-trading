---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <!-- Hero: Split layout with left text, right image -->
  <section class="hero-split container" data-aos="fade-up">
    <div class="hero-text">
      <h1>Building Excellence for Over 30 Years</h1>
      <p>
        Trusted materials, guided support, and reliable service. Wardan Trading
        is your partner in every project.
      </p>
      <div class="hero-buttons">
        <a href="/pyRAG" class="cta-btn hero-cta">Chat with our AI</a>
        <a href="/contact" class="cta-btn secondary-cta"
          >Free Expert Consultation</a
        >
      </div>
    </div>
    <div class="hero-image">
      <!-- Example image: adjust path as needed -->
      <div
        style="
        position: relative;
        display: flex;
        justify-content: center;
        align-items: flex-end;
        gap: 1rem;
        padding: 2rem 0;
      "
      >
        <!-- Background blur shape -->
        <div
          style="
          position: absolute;
          width: 450px;
          height: 300px;
          background: radial-gradient(circle at center, #f0f4f8 0%, transparent 70%);
          z-index: 0;
          border-radius: 50%;
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
        "
        >
        </div>

        <!-- Images with staggered sizes and margins -->
        <img
          src="/images/hero/hero1.svg"
          alt="Quality building materials"
          style="width: 160px; margin-bottom: 20px; position: relative; z-index: 1; transition: transform 0.3s ease;"
          data-aos="zoom-in"
          data-aos-delay="200"
          onmouseover="this.style.transform='scale(1.05)';"
          onmouseout="this.style.transform='scale(1)';"
        />
        <img
          src="/images/hero/hero2.svg"
          alt="Quality building materials"
          style="width: 190px; position: relative; z-index: 1; transition: transform 0.3s ease;"
          data-aos="zoom-in"
          data-aos-delay="300"
          onmouseover="this.style.transform='scale(1.05)';"
          onmouseout="this.style.transform='scale(1)';"
        />
        <img
          src="/images/hero/hero3.svg"
          alt="Quality building materials"
          style="width: 150px; margin-bottom: 30px; position: relative; z-index: 1; transition: transform 0.3s ease;"
          data-aos="zoom-in"
          data-aos-delay="400"
          onmouseover="this.style.transform='scale(1.05)';"
          onmouseout="this.style.transform='scale(1)';"
        />
      </div>
    </div>
  </section>

